{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch (Remote)",
            "type": "cppdbg",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "program": "${workspaceFolder}/build/sample",
            "args": [],
            "linux": {
              "MIMode": "gdb",
              "miDebuggerPath": "/usr/bin/gdb",
              "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                }
              ]
            },
            "sourceFileMap": {
              "/project/root/on/machine": "${workspaceRoot}"
            }
        }
    ]
}